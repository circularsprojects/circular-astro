---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="circulars.dev :3" />
		<meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://www.nerdfonts.com/assets/css/webfont.css">
		<title>{title}</title>
	</head>
  <body class="flex flex-col bg-black overflow-y-scroll font-display">
    <noscript>Javascript is needed for some parts of this site to work, however it isn't required.</noscript>
		<slot />
	</body>
</html>
