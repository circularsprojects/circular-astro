---
import { ClientRouter } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" transition:animate="fade">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik" rel="stylesheet">
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://www.nerdfonts.com/assets/css/webfont.css">
    <link rel="icon" href="/cat-icon.png" type="image/x-icon">
    <title>{title}</title>
    <script is:inline defer="" data-domain="circulars.dev" src="https://plausible.circulars.dev/js/script.js"></script>

    <meta content="circulars.dev" property="og:title">
    <meta content="i do programming stuff. maker of various cool projects" property="og:description">
    <meta name="description" content="i do programming stuff. maker of various cool projects">
    <meta name="keywords" content="circular, circulars, developer, circulars.dev, circularsprojects.com, watchcord">
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://circulars.dev">
    <meta property="twitter:card" content="summary">
    <meta property="twitter:url" content="https://circulars.dev">
    <meta property="twitter:title" content="circulars.dev">
    <meta property="twitter:description" content="the most :3 ever,,..">
    <meta property="twitter:image" content="https://circulars.dev/neco%20cheer.gif">
    <meta property="og:image" content="https://circulars.dev/neco%20cheer.gif">

    <ClientRouter />
	</head>
  <body class="flex flex-col bg-ctp-base overflow-y-scroll font-display">
    <noscript>Javascript is needed for some parts of this site to work, however it isn't required.</noscript>
		<slot />
  </body>
</html>
