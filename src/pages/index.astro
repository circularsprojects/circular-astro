---
import Layout from '../layouts/Layout.astro';
import MusicStatus from '../components/MusicStatus.astro';
import SocialLink from '../components/SocialLink.astro';
import ProjectLink from '../components/ProjectLink.astro';
---

<Layout title="circular :3">
  <main class="p-8 w-full lg:w-1/2 text-left self-center text-ctp-text flex flex-col gap-8">
    <div class="w-full">
      <div class="my-4">
        <h1 class="text-5xl font-bold bg-gradient-to-r from-ctp-red via-ctp-pink to-ctp-sky bg-[length:100%_3px] bg-no-repeat bg-bottom inline-block">circular</h1>
        <p class="text-opacity-25 text-ctp-text"><em>he/him</em></p>
      </div>
      <p>avid programmer</p>
      <p>studying at online uni</p>
      <p>swift student challenge 2024 winner</p>
    </div>
    <MusicStatus />
    <div>
      <h1 class="text-3xl font-bold">Socials</h1>
      <div class="mt-2 flex flex-col">
        <SocialLink
            title="circular [AT] circulars.dev"
            link="javascript:alert('just replace the [at] with a @ duhhh i also have a public key you can use to encrypt messages, see my keyoxide')"
            icon_class="nf-md-email"
            hover_color="hover:text-ctp-red"
            />
        <SocialLink
            title="Keyoxide"
            link="https://keyoxide.org/A7EBE918E1931F95AED878E15FD9E3482ABB74DE"
            icon_class="nf-fa-key"
            hover_color="hover:text-ctp-lavender"
            />
        <SocialLink
            title="Discord"
            link="https://discord.com/users/305243321784336384"
            icon_class="nf-md-discord"
            hover_color="hover:text-ctp-blue"
            />
        <SocialLink
            title="Github"
            link="https://github.com/circularsprojects"
            icon_class="nf-fa-github"
            hover_color="hover:text-ctp-text"
            />
        <SocialLink
            title="Twitter"
            link="https://twitter.com/circlure2"
            icon_class="nf-fa-twitter"
            hover_color="hover:text-ctp-sapphire"
            />
        <SocialLink
            title="Instagram"
            link="https://instagram.com/circularsprojects"
            icon_class="nf-fa-instagram"
            hover_color="hover:text-ctp-pink"
            />
        <SocialLink
            title="Last.fm"
            link="https://www.last.fm/user/circular_"
            icon_class="nf-fa-lastfm"
            hover_color="hover:text-ctp-red"
            />
        <SocialLink
            title="Mastodon"
            link="https://wetdry.world/@circular"
            icon_class="nf-fa-mastodon"
            hover_color="hover:text-ctp-lavender"
            />
      </div>
    </div>
    <div>
      <h1 class="text-3xl font-bold">Projects</h1>
      <div class="mt-2 flex flex-col">
        <ProjectLink
            title="Watchcord"
            link="https://watchcord.dev"
            icon_class="nf-md-watch_variant"
            />
        <ProjectLink
            title="detnsw-autologin"
            link=""
            icon_class="nf-fa-key"
            />
        <ProjectLink
            title="food-bot"
            link=""
            icon_class="nf-md-discord"
            />
      </div>
    </div>
	</main>
</Layout>


