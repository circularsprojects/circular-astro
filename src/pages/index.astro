---
import Layout from '../layouts/Layout.astro';
import MusicStatus from '../components/MusicStatus.astro';
import SocialLink from '../components/SocialLink.astro';
---

<Layout title="circular :3">
  <main class="p-8 w-full lg:w-1/2 text-left self-center text-white flex flex-col gap-8">
    <div class="w-full">
      <div class="my-4">
        <h1 class="from-violet-300 to-white bg-gradient-to-r inline-block text-transparent bg-clip-text text-5xl font-bold">circular</h1>
<p class="text-opacity-25 text-white"><em>he/him</em></p>
      </div>
      <p>avid programmer</p>
      <p>studying at online uni</p>
      <p>swift student challenge 2024 winner</p>
    </div>
    <MusicStatus />
    <div>
      <h1 class="text-3xl font-bold">Socials</h1>
      <div class="mt-2 flex flex-col">
        <SocialLink
            title="Discord"
            link="https://discord.com/users/305243321784336384"
            icon_class="nf-md-discord"
            hover_color="hover:text-[#7289DA]"
            />
        <SocialLink
            title="Github"
            link="https://github.com/circularsprojects"
            icon_class="nf-fa-github"
            hover_color="hover:text-[#f5f5f5]"
            />
        <SocialLink
            title="Twitter"
            link="https://twitter.com/circlure2"
            icon_class="nf-fa-twitter"
            hover_color="hover:text-[#1DA1F2]"
            />
        <SocialLink
            title="Instagram"
            link="https://instagram.com/circularsprojects"
            icon_class="nf-fa-instagram"
            hover_color="hover:text-[#E1306C]"
            />
        <SocialLink
            title="Keyoxide"
            link="https://keyoxide.org/A7EBE918E1931F95AED878E15FD9E3482ABB74DE"
            icon_class="nf-fa-key"
            hover_color="hover:text-[#bcb5e4]"
            />
        <SocialLink
            title="Last.fm"
            link="https://www.last.fm/user/circular_"
            icon_class="nf-fa-lastfm"
            hover_color="hover:text-[#D51007]"
            />
        <SocialLink
            title="Mastodon"
            link="https://wetdry.world/@circular"
            icon_class="nf-fa-mastodon"
            hover_color="hover:text-[#6364FF]"
            />
      </div>
    </div>
	</main>
</Layout>


