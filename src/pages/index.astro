---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="circular :3">
  <main class="p-8 w-full lg:w-1/2 text-left self-center text-white flex flex-col gap-8">
    <div class="w-full">
      <div class="my-4">
        <h1 class="from-violet-300 to-white bg-gradient-to-r inline-block text-transparent bg-clip-text text-5xl font-bold">circular</h1>
        <p class="text-opacity-25 text-white"><em>he/him</em></p>
      </div>
      <p>avid programmer</p>
      <p>studying at online uni</p>
      <p>swift student challenge 2024 winner</p>
    </div>
    <div class="text-left border-violet-100 border-2 bg-opacity-30 p-4 rounded-md h-32 flex gap-2">
      <img src="https://lastfm.freetls.fastly.net/i/u/174s/de0fbf0601a554a6e1c61226c22f7909.jpg" class="rounded-full">
      <div class="overflow-hidden">
        <p class="text-sm">Currently listening to:</p>
        <p class="text-lg">i scream this in the mirror before i interact with anyone</p>
        <p class="text-sm text-gray-300"><em>JPEGMAFIA</em></p>
      </div>
    </div>
	</main>
</Layout>


